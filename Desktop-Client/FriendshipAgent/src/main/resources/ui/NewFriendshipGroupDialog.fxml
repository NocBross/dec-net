<BorderPane fx:controller="main.java.controller.NewFriendshipGroupDialogController"
	xmlns:fx="http://javafx.com/fxml">
	<top>
		<Text fx:id="newFriendshipGroupHeaderText" Text="Neuen Bekanntenkreis hinzufügen" />
	</top>
	<center>
		<HBox spacing="10" alignment="center">
			<Text fx:id="friendshipGroupText" Text="Bekanntenkreis:" />
			<TextField fx:id="friendshipGroupTextField" Text=""
				onKeyReleased="#handleKeyEvent" />
		</HBox>
	</center>
	<bottom>
		<HBox spacing="10" alignment="bottom_right">
			<Button fx:id="addButton" Text="Hinzufügen" onAction="#addButtonAction" />
			<Button fx:id="cancelButton" Text="Abbrechen" onAction="#cancelButtonAction" />
		</HBox>
	</bottom>
</BorderPane>
