<GridPane fx:controller="main.java.controller.RegisterSceneController"
	xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

	<Text Text="Registrierung" id="login_register"
		GridPane.columnIndex="1" GridPane.rowIndex="0" />

	<Label Text="Benutzername" GridPane.columnIndex="0"
		GridPane.rowIndex="2" />

	<TextField fx:id="nicknameField" GridPane.columnIndex="1"
		GridPane.rowIndex="2" />

	<Label Text="Passwort:" GridPane.columnIndex="0"
		GridPane.rowIndex="4" />

	<PasswordField fx:id="passwordField"
		GridPane.columnIndex="1" GridPane.rowIndex="4" />

	<Label Text="Passwort wiederholen:" GridPane.columnIndex="0"
		GridPane.rowIndex="5" />

	<PasswordField fx:id="passwordRepeatField"
		GridPane.columnIndex="1" GridPane.rowIndex="5" onKeyReleased="#passwordMatchingCheck" />

	<Text fx:id="registerInfoText" GridPane.columnIndex="1"
		GridPane.rowIndex="6" />

	<Separator GridPane.columnIndex="0" GridPane.rowIndex="8"
		GridPane.columnSpan="2" />

	<Text Text="Hinweis:" id="login_register" GridPane.columnIndex="0"
		GridPane.rowIndex="10" GridPane.columnSpan="2" />

	<Text
		Text="Das Passwort muss mindestens 10 Zeichen lang sein und mindestens
		einen Kleinbuchstaben, einen GroÃŸbuchstaben, eine Zahl und ein Sonderzeichen
		enthalten."
		id="hint" GridPane.columnIndex="0" GridPane.rowIndex="11"
		GridPane.columnSpan="2" wrappingWidth="450" />

	<Text fx:id="specialCharacters" id="hint" GridPane.columnIndex="0"
		GridPane.rowIndex="13" GridPane.columnSpan="2" wrappingWidth="450" />

	<Separator GridPane.columnIndex="0" GridPane.rowIndex="15"
		GridPane.columnSpan="2" />

	<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1"
		GridPane.rowIndex="17">

		<Button fx:id="registerButton" Text="Registrieren" onAction="#registerButtonAction" />

		<Button fx:id="cancelButton" Text="Abbrechen" onAction="#cancelButtonAction" />

	</HBox>

</GridPane>
