<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DateCell?>
<?import javafx.scene.control.DatePicker?>
<?import com.sun.javafx.scene.control.skin.DatePickerContent?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:controller="main.java.controller.LoginSceneController"
	xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

	<Label text="Benutzername:" GridPane.columnIndex="0"
		GridPane.rowIndex="1" />

	<TextField fx:id="nicknameField" text=""
		GridPane.columnIndex="1" GridPane.rowIndex="1" />

	<Label text="Password:" GridPane.columnIndex="0"
		GridPane.rowIndex="2" />

	<PasswordField fx:id="passwordField" text=""
		GridPane.columnIndex="1" GridPane.rowIndex="2" onKeyReleased="#submitKeyEvent" />

	<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1"
		GridPane.rowIndex="4">

		<Button fx:id="loginButton" text="Anmelden" onAction="#submitButtonAction"
			onKeyReleased="#submitKeyEvent" />
	</HBox>

	<Button fx:id="registerButton" id="login_register" text="Registrieren"
		GridPane.columnIndex="0" GridPane.rowIndex="6" onMouseEntered="#hover"
		onMouseExited="#noHover" onAction="#registerButtonAction" />

	<Text fx:id="resultText" id="error" GridPane.columnIndex="0"
		GridPane.rowIndex="8" GridPane.columnSpan="2" />

</GridPane>
